<idea-plugin>
    <id>org.burgeon.turtle</id>
    <name>Turtle</name>
    <vendor email="376052450@qq.com" url="https://github.com/burgeon-0/turtle">Burgeon</vendor>

    <description><![CDATA[
    Java API documents and test cases generation tools.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Tools菜单、项目右键菜单 -->
        <group id="org.burgeon.turtle.collect.idea.action.ApiActionGroup"
               text="Turtle" icon="/icons/turtle.png" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <action id="org.burgeon.turtle.collect.idea.action.ApiBlueprintExportAction"
                    class="org.burgeon.turtle.collect.idea.action.ApiBlueprintExportAction"
                    text="导出API Blueprint文档">
            </action>
            <separator/>
        </group>
    </actions>
</idea-plugin>